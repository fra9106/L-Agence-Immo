<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}L'AgenceImmo{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('assets/css/app.css')}}">
        <link rel="stylesheet"
        href="https://bootswatch.com/4/flatly/bootstrap.min.css">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="/">Agence Immo</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
          
            <div class="collapse navbar-collapse" id="navbarColor01">
              <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                  <a class="nav-link {% if current_menu is defined and current_menu == 'properties' %}active{% endif %}" href="{{ path('property.index') }}">Acheter</a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('admin.property.index') }}">Admin</a>
                </li>
                {% endif %}
              
                {% if is_granted('ROLE_USER') %}
                
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('security_logout') }}">DÃ©connexion</a>
                </li>
               
                {% else %}

               <li class="nav-item">
                  <a class="nav-link" href="{{ path('security_registration') }}">Inscription</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('security_login') }}">Connexion</a>
                </li>
                {% endif %}
                </ul>
                
            </div>
          </nav>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
